{
  "monitor_interval_hours": 1,
  "check_extensions": [".py", ".js", ".ts", ".java", ".cpp", ".h", ".hpp"],
  "exclude_patterns": ["tests/", "docs/", "*.md", "*.txt", ".git/", "prompts/"],
  "auto_commit": true,
  "auto_push": true,
  "build_timeout_minutes": 30,
  "log_level": "INFO",
  "notification": {
    "enabled": false,
    "email": "your-email@example.com",
    "slack_webhook": "https://hooks.slack.com/..."
  }
}
